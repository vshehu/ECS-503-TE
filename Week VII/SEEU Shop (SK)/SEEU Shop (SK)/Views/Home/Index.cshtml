@model SEEU_Shop__SK_.ViewModels.IndexViewModel

<div class="container">
    <div class="row">
        <div class="col-2">
            @foreach (var c in Model.Categories)
            {
            <a href="/Home/Index/@c.Id">
                @c.Name <br />
            </a>
            }

        </div>
        <div class="col-10">
            
            @foreach (var p in Model.Products)
            {
            <div class="row">
                <div class="col-md-3">
                    @p.Name
                </div>
                <div class="col-md-5">
                    @p.Description
                </div>
                <div class="col-md-1">
                    @p.Price
                </div>
                
            </div>
            }
        </div>
    </div>
</div>
